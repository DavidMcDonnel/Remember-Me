<html>
	<head>
		<title>My Angular App</title>
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
		<script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
		<script src="/javascripts/angularApp.js"></script>
	</head>

<!-- 	<body ng-app="rememberMe" ng-controller="MainCtrl">
 -->		
 	<body ng-app="rememberMe">
 		<div class="row">
 			<div class="col-md-6 col-md-offset-3">
 				<ui-view></ui-view>
 			</div>
 		</div>

		<script type="text/ng-template" id="/home.html">
			<div class="page-header">
				<h1> Remember Me </h1>
			</div>

			<ol>
				<li ng-repeat="article in articles">
					<a href="{{article.link}}">{{article.name}}</a>
					<a href="#/articles/{{article.id}}">Reminders</a>
					<button ng-click="snoozeReminder(article)">snooze</button> 
				</li>
			</ol>

			<form ng-submit="addArticle()">
				<input type="text" ng-model="name"></input>
				<input type="text" ng-model="link"></input>
				<button type="submit"> Add </button>
			</form>
		</script>

		<script type="text/ng-template" id="/articles.html">
			<div class="page-header">
				<h3> <a href="{{articles.link}}">{{articles.name}}</a></h3>
			</div>

			<div>
				<p> Remind me on {{articles.remind_me.date}} </p>
			</div>
		</script>

	</body>
</html> 