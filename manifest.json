{
  "manifest_version": 2,

  "name": "RememberMe",
  "description": "Keep track of your digital life",
  "version": "1.0",

  "browser_action": {
    "default_icon": "UI/RMicon.png",
    "default_popup": "views/popup.html",
    "default_title": "Save this link!"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/", 
    "notifications",
    "contextMenus",
    "http://localhost:3000/"
  ],

  "background": {
    //"persistent": false,
    "scripts": [
      "UI/background.js"
    ]
  },

  "web_accessible_resources": [
    "views/home.html"
  ],

   "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js; object-src 'self'"
}